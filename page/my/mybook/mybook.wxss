@import "../../common/index.wxss";
.index-bd{width: 750rpx;overflow: hidden; padding:0;float: left;}

#useravatar{background-color:#fff;margin-bottom:30rpx;box-shadow:0 3px 3px #eee;}
#useravatar image{position: relative;width: 160rpx;height: 160rpx; margin:28rpx 0 28rpx 295rpx;border-radius: 50%;}
#totalnum{width:150rpx;padding:10rpx 0 10rpx 26rpx;background-color:rgb(0,136,255);border-radius:25rpx 0 0 25rpx;float:right;margin:140rpx 0 0 0;color:#fff;font-size:28rpx;}
.books{position: relative;float: left;width: 250rpx;margin-bottom: 30rpx;height: 320rpx}
.books image{width: 150rpx;height: 200rpx;margin: 20rpx 47.5rpx;float: left;}
.books text{width: 150rpx;float: left;text-align: center;font-size: 20rpx;color: #999;margin: 0 50rpx;}

#addbox{position: relative;width: 150rpx;height: 200rpx;margin: 20rpx 47.5rpx;float: left;border-radius: 10rpx;border: #eee solid 1px }
#addbtn{position: relative;width: 150rpx;height: 200rpx;float: left;}
#addbtn image{width: 80rpx;height: 80rpx;margin:56rpx 35rpx;}
#bookarea{position: relative;width: 750rpx;float: left;background-color: #fff;padding: 30rpx 0; box-shadow:0 3px 3px #eee;min-height: 750rpx;}

.hiddenbook{position:absolute;z-index:8;top:10rpx;right:36rpx;width:18rpx;height:18rpx;border-radius:50%;background-color: #aaa;}
.showbook{position:absolute;z-index:8;top:10rpx;right:36rpx;width:18rpx;height:18rpx;border-radius:50%;background-color: #00d10d;}
.waitbook{position:absolute;z-index:8;top:10rpx;right:36rpx;width:18rpx;height:18rpx;border-radius:50%;background-color: #ffff33;}
.outbook{position:absolute;z-index:8;top:10rpx;right:36rpx;width:18rpx;height:18rpx;border-radius:50%;background-color: #ff6633;}

#operate_panel{position: fixed;top: 0;left: 0;width: 750rpx;height: 100%;background-color: rgba(0,0,0,.5);z-index: 9;}
.menu{position: fixed;z-index: 99;width: 750rpx;left: 0;bottom: -131px;background-color:#f5f5f5;padding: 0;height: 120px;overflow: hidden;}
#title{width:750rpx;float:left;color: #666;font-size: 28rpx;padding: 8rpx;border-bottom:#eee solid 1px;margin-bottom:20rpx;}
.oper_options{width:750rpx;float:left;font-size:32rpx;padding:10rpx 0;color:#333;text-align:center;border-bottom: #f1f1f1 solid 1px}
.oper_optionslast{border: none!important}